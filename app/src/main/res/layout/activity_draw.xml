        <!--Instance of the DrawingView class -->
        <com.team06.freehand.Chat.DrawingView
            android:id="@+id/draw_view"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/dark_grey"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                >

                <!--new picture button-->
                <ImageButton
                    android:id="@+id/new_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button_rounded_rectangle_eden"
                    android:src="@drawable/ic_new" />

                <!--save button-->
                <ImageButton
                    android:id="@+id/save_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button_rounded_rectangle_eden"
                    android:src="@drawable/ic_save" />

                <!--brush button-->
                <ImageButton
                    android:id="@+id/draw_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button_rounded_rectangle_eden"
                    android:src="@drawable/ic_pencil_white" />

                <!--eraser button-->
                <ImageButton
                    android:id="@+id/erase_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button_rounded_rectangle_eden"
                    android:src="@drawable/ic_eraser" />

                <!--settings button-->
                <ImageButton
                    android:id="@+id/settings_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button_rounded_rectangle_eden"
                    android:src="@drawable/ic_settings_white" />

            </LinearLayout>

            <!--send button-->
            <ImageButton
                android:id="@+id/send_btn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_rounded_rectangle_white"
                android:src="@drawable/ic_send" />


        </RelativeLayout>

