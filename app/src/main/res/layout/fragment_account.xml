<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1">

            <include layout="@layout/snippet_top_editprofiletoolbar" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_below="@+id/relLayout1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relLayout2"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

                <!--password-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textSize="@dimen/heading2"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/current_password"
                        android:inputType="textPassword"
                        android:hint="Current Password"
                        android:textSize="@dimen/body"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/new_password"
                        android:inputType="textPassword"
                        android:hint="New Password"
                        android:textSize="@dimen/body"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/btnPassword"
                    android:text="Update Password"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/pre_body"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:background="@drawable/button_eden"
                    />



                <!--email-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Email"
                    android:textSize="@dimen/heading2"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Email: "
                        android:textSize="@dimen/body"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/body"
                        android:textColor="@color/black"
                        android:id="@+id/current_email"/>


                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/email"
                        android:inputType="textEmailAddress"
                        android:hint="New Email"
                        android:textSize="@dimen/body"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/btnEmail"
                    android:text="Update Email"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/pre_body"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:background="@drawable/button_eden"
                    />




                <!--<Button-->
                    <!--android:layout_width="250dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Delete Account"-->
                    <!--android:textSize="@dimen/heading1"-->
                    <!--android:id="@+id/btnDeleteAccount"-->
                    <!--android:background="@drawable/button_white_rounded"-->
                    <!--android:layout_marginTop="40dp"-->
                    <!--android:padding="20dp"/>-->

            </LinearLayout>


        </ScrollView>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>