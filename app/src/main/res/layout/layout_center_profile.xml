<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- ******************************* Top Section ******************************* -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1"
            android:background="@drawable/grey_border_bottom_white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <!-- profile picture -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photo">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/profile_photo"
                    app:civ_border_color="@color/grey"
                    app:civ_border_width="2dp"
                    android:layout_margin="10dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_silhouette"/>

            </RelativeLayout>


            <!-- bio description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/photo"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:id="@+id/bio">

                <!--name-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Isabelle"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"/>

                <!--name and location-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp">

                    <!--age-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/age"
                        android:textColor="@color/light_grey"
                        android:text="Age 23"
                        android:textSize="14sp"/>

                    <!--vertical line-->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@color/light_grey"
                        android:id="@+id/vertLine"
                        android:layout_marginStart="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"/>


                    <!--location-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/location"
                        android:textColor="@color/light_grey"
                        android:text="Ottawa, ON"
                        android:textSize="14sp"/>

                </LinearLayout>

                <!--description-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/description"
                    android:textColor="@color/black"
                    android:text="I am an artist. I have a passion for drawing and painting. I grew up learning from the best and expressing my creativity. I love art!"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </RelativeLayout>


        <!-- ******************************* Grid Section ******************************* -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout3"
            android:layout_below="@+id/relLayout1"
            android:layout_marginBottom="54dp">

            <GridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gridView"
                android:numColumns="2"
                android:verticalSpacing="1dp"
                android:horizontalSpacing="1dp"
                android:stretchMode="columnWidth"
                android:gravity="center" >

            </GridView>


        </RelativeLayout>



    </RelativeLayout>


</merge>